{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "noEmit": false,
        "emitDeclarationOnly": false,
    },
    "include": [
        "src",
        "test-utils"
    ],
    "exclude": [
        "**/*.test.ts",
        "test-data",
        "test-utils",
        "tests",
        "fixtures"
    ],
    "references": [
        {
            "path": "../shared-utils"
        }
    ]
}